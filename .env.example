# OpenAI API（必填）
OPENAI_API_KEY=sk-your-openai-key

# 豆包 Seedance（推荐，国内直连）
# 申请地址：https://console.volcengine.com/ → 火山方舟 → API Key 管理
ARK_API_KEY=your-ark-api-key

# Creatok（备选，国际服务）
CREATOK_API_KEY=your-creatok-key

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/ai_video_generator

# Redis
REDIS_URL=redis://localhost:6379

# Storage (Aliyun OSS)
OSS_ACCESS_KEY_ID=your-access-key
OSS_ACCESS_KEY_SECRET=your-secret-key
OSS_BUCKET_NAME=ai-video-generator
OSS_ENDPOINT=oss-cn-hangzhou.aliyuncs.com

# App
APP_SECRET_KEY=your-secret-key-here
APP_DEBUG=false
